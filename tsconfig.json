{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@deliveryapp/core": ["libs/core/src/index.ts"],
      "@deliveryapp/data-access": ["libs/data-access/src/index.ts"],
      "@deliveryapp/testing": ["libs/testing/src/index.ts"],
      "@deliveryapp/pages/auth": ["libs/pages/auth/src/index.ts"],
      "@deliveryapp/common": ["libs/common/src/index.ts"],
      "@deliveryapp/pages/main": ["libs/pages/main/src/index.ts"],
      "@deliveryapp/guards": ["libs/guards/src/index.ts"],
      "@deliveryapp/pages/profile": ["libs/pages/profile/src/index.ts"],
      "@deliveryapp/utils": ["libs/utils/src/index.ts"],
      "@deliveryapp/ui": ["libs/ui/src/index.ts"],
      "@deliveryapp/pages/create-order": [
        "libs/pages/create-order/src/index.ts"
      ],
      "@deliveryapp/pages/update-order": [
        "libs/pages/update-order/src/index.ts"
      ],
      "@deliveryapp/pages/orders": ["libs/pages/orders/src/index.ts"],
      "@deliveryapp/pages/payments": ["libs/pages/payments/src/index.ts"],
      "@deliveryapp/pages/users": ["libs/pages/users/src/index.ts"],
      "@deliveryapp/pages/settings": ["libs/pages/settings/src/index.ts"],
      "@deliveryapp/pages/logs": ["libs/pages/logs/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
